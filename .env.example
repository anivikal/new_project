# Battery Smart Voicebot Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# AWS Bedrock
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
AWS_BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# AWS Polly (TTS)
AWS_POLLY_VOICE_HINDI=Aditi
AWS_POLLY_VOICE_ENGLISH=Kajal

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=true
API_CORS_ORIGINS=*

# Voicebot Settings
VOICEBOT_PRIMARY_LANGUAGE=hi-IN
VOICEBOT_SECONDARY_LANGUAGE=bn-IN
VOICEBOT_SUPPORTED_LANGUAGES=hi-IN,en-IN,bn-IN,ta-IN
VOICEBOT_INTENT_CONFIDENCE_THRESHOLD=0.7
VOICEBOT_HANDOFF_CONFIDENCE_THRESHOLD=0.5
VOICEBOT_SENTIMENT_NEGATIVE_THRESHOLD=0.35
VOICEBOT_SENTIMENT_DROP_THRESHOLD=0.2
VOICEBOT_MAX_REPETITIONS_BEFORE_HANDOFF=3
VOICEBOT_AUDIO_SAMPLE_RATE=16000
VOICEBOT_VAD_AGGRESSIVENESS=2
VOICEBOT_SILENCE_TIMEOUT_MS=2000
VOICEBOT_MAX_CALL_DURATION_SECONDS=600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_TTL=3600

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=voicebot
MONGO_CONVERSATIONS_COLLECTION=conversations
MONGO_HANDOFFS_COLLECTION=handoffs

# CRM/Jarvis Integration
CRM_BASE_URL=https://api.batterysmart.com
CRM_API_KEY=your_crm_api_key
CRM_TIMEOUT_SECONDS=10

# Groq LLM Configuration (Primary LLM - faster and free)
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL_ID=llama-3.3-70b-versatile
GROQ_TIMEOUT_SECONDS=30
GROQ_MAX_TOKENS=500

# AI4Bharat IndicConformer ASR Configuration
INDIC_ASR_HF_TOKEN=your_huggingface_token
INDIC_ASR_MODEL_ID=ai4bharat/indic-conformer-600m-multilingual
INDIC_ASR_DECODING_METHOD=ctc
INDIC_ASR_DEVICE=cpu

# TTS Configuration
TTS_PROVIDER=gtts
TTS_CACHE_SIZE=500
